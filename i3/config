# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  #status_command i3status

  font pango:Hack 10
  status_command ~/.config/i3/bumblebee-status/bumblebee-status -m \
    sensors2  \
    disk  \
    nic \
    brightness  \
    amixer  \
    time  \
    date  \
    battery \
    -p \
    battery.warning="50" \
    battery.critical="30" \
    nic.exclude="enp,lo" \
    nic.format="{ssid} {ip}" \
    time.format="%I:%M %p" \
    date.format="%a %b %d" \
    disk.format="{left}" \
    -t wal-powerline
    
  position bottom


  colors {
    background $background
    # class             border  backgr. text indicator
    focused_workspace   $foreground $foreground $background
    active_workspace    $background #444444 $foreground
    inactive_workspace  $background $background $foreground
    urgent_workspace    #ff6b81 #000000 #ff6b81
  }
}

